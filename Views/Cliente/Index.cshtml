@*@model IEnumerable<FacturacionWeb.Models.Cliente>*@

@{
    ViewBag.Title = "Clientes";
}

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-10 col-md-5 order-md-1 order-last">
                <h3>Listado de @ViewBag.Title</h3>

            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
                Lista de Clientes
                @{
                    if (User.IsInRole("Admin"))
                    {

                        <div class="float-end">
                            <a data-bs-toggle="modal" data-bs-target="#exampleModalCenter" class="btn btn-primary user-img d-flex align-items-center">
                                <i class="bi bi-person-plus-fill"></i>
                                <span> &emsp; Agregar </span>
                            </a>
                        </div>
                    }
                }



            </div>


            <div class="card-body table-responsive">
                <table class="table table-dark table-striped table-responsive" id="table1">
                    <thead>
                        <tr>
                            <th>Cédula/Ruc</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Teléfono</th>
                            <th>Dirección</th>
                            <th>Estado</th>
                            <th>Opciones</th>

                            <!-- <th>Estado</th>-->
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>

    </section>
</div>



<div class="modal fade" id="exampleModalCenterEditar" tabindex="-1" role="dialog"
     aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-centered modal-dialog-scrollable"
         role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title " id="exampleModalCenterTitle">
                    Editar Cliente
                </h5>
                <button type="button" class="close" data-bs-dismiss="modal"
                        aria-label="Close">
                    <i data-feather="x"></i>
                </button>
            </div>

            <div class="modal-body">
                <div class="form-group position-relative has-icon-left">
                    <input id="txtID" type="text" disabled placeholder="Id del Producto"
                           class="form-control">
                    <div class="form-control-icon">
                        <i class="bi bi-bookmark-check"></i>
                    </div>
                </div>

                <div class="form-group position-relative has-icon-left">
                    <input name="txtCedE" placeholder="Cédula"
                           onkeypress="return event.charCode >= 48" min="1" class="form-control" id="txtCedE"
                           oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                           type="number"
                           maxlength="10" />
                    
                    <div class="form-control-icon">
                        <i class="bi bi-credit-card-2-front"></i>
                    </div>
                </div>

                <div class="form-group position-relative has-icon-left">
                    <input id="txtNomE" type="text" placeholder="Nombres"
                           class="form-control">
                    <div class="form-control-icon">
                        <i class="bi bi-person"></i>
                    </div>
                </div>
                <div class="form-group position-relative has-icon-left">
                    <input id="txtApeE" type="text" placeholder="Apellidos"
                           class="form-control">
                    <div class="form-control-icon">
                        <i class="bi bi-person"></i>
                    </div>
                </div>
                <div class="form-group position-relative has-icon-left">
                    <input name="txtTelE"
                           onkeypress="return event.charCode >= 48" min="1" class="form-control" id="txtTelE"
                           oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                           type="number"
                           maxlength="10" />
                    <div class="form-control-icon">
                        <i class="bi bi-phone"></i>
                    </div>
                </div>
                <div class="form-group position-relative has-icon-left">
                    <input id="txtDirE" type="text" placeholder="Dirección"
                           class="form-control">
                    <div class="form-control-icon">
                        <i class="bi bi-geo-alt"></i>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger"
                        data-bs-dismiss="modal">
                    <i class="bx bx-x d-block d-sm-none"></i>
                    <span class="d-none d-sm-block">Cancelar</span>
                </button>
                <button type="button" onclick="EditarCliente()" class="btn btn-success ml-1">
                    <i class="bx bx-check d-block d-sm-none"></i>
                    <span class="d-none d-sm-block">Guardar</span>
                </button>
            </div>
        </div>
    </div>
</div>

